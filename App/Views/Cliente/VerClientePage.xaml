<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.Cliente.VerClientePage"
             Title="Ver Cliente">

    <VerticalStackLayout Padding="10" Spacing="15">
        <Label Text="{Binding Detalle.ID}" FontSize="20"/>
        <Label Text="{Binding Detalle.NombreCompleto}" FontSize="20"/>
        <Label Text="{Binding Detalle.FechaDeIngreso}" FontSize="16"/>
        <Label Text="{Binding Detalle.TipoCliente.NombreTipo}" FontSize="16"/>

        <Button Text="Modificar" 
            Clicked="OnEditarClicked" 
            BackgroundColor="LightBlue" 
            TextColor="Black"/>

        <Button Text="Eliminar" 
            Clicked="OnEliminarClicked" 
            BackgroundColor="LightCoral" 
            TextColor="White"/>
    </VerticalStackLayout>

</ContentPage>